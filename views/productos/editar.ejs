<%- include ../layouts/header.ejs%>
<br/><br/>
<div class="card">
    <div class="card-header">
        Formulario de captura
    </div>
    <div class="card-body">
        <h5 class="card-title">Editar datos de Producto</h5>
        <p class="card-text">
            <form method="post" action="../actualizar/">
                <input type="hidden" name="id" value="<%=producto.id%>">
                <div class="form-group">
                    <label for="my-input">Nombre</label>
                    <input id="my-input" value="<%=producto.nombre%>" class="form-control" type="text" name="nombre">
                </div>
                <div class="form-group">
                    <label for="my-input">Descripcion</label>
                    <input id="my-input" value="<%=producto.descripcion%>" class="form-control" type="text" name="descripcion">
                </div>
                <label for="my-input">Categoria</label>
                <div>
                    <select class="form-select" aria-label="Default select example" name="categoria" id="sel">
                        <% for( let i = 0; i < categorias.length; i++ ) { %>
                                <%if(i==producto.categoria){%>
                                    <option selected value='<%= i %>'> <%=categorias[i].categoria%> </option>
                                <% }else{%>
                                    <option value='<%= i %>'> <%=categorias[i].categoria%> </option>
                                <% }%>
                        <% } %>
                    </select>
                </div><br>
                <button class="btn btn-success" type="submit">Actualizar</button>
                <a class="btn btn-primary" href="/productos">Cancelar</a>
            </form>
        </p>
    </div>
</div>

<%- include ../layouts/footer.ejs%>