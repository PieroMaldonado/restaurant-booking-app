        <table class="table table-light">
            <thead class="thead-light">
                <tr>
                    <th>#</th>
                    <th>Nombre</th>
                    <th>Descripci√≥n</th>
                    <th>Categoria</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                <% for( let producto = 0; producto < productos.length; producto++ ) { %>
                    <tr>
                        <td> <%=productos[producto].id%> </td>
                        <td> <%=productos[producto].nombre%> </td>
                        <td> <%=productos[producto].descripcion%> </td>
