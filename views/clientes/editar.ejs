<%- include ../layouts/header.ejs%>
<br/><br/>
<div class="card">
    <div class="card-header">
        Formulario de captura
    </div>
    <div class="card-body">
        <h5 class="card-title">Editar datos de mesa</h5>
        <p class="card-text">
            <form method="post" action="../actualizar/">
                <input type="hidden" name="id" value="<%=cliente.id%>">
                <div class="form-group">
                    <label for="my-input">Nombre</label>
                    <input id="my-input" value="<%=cliente.nombre%>" class="form-control" type="text" name="nombre">
                </div>
                <div class="form-group">
                    <label for="my-input">Ubicación</label>
                    <input id="my-input" value="<%=cliente.apellido%>" class="form-control" type="text" name="apellido">
                </div>
                <div class="form-group">
                    <label for="my-input">Telefono</label>
                    <input id="my-input" value="<%=cliente.telefono%>" class="form-control" type="text" name="telefono">
                </div>
                <div class="form-group">
                    <label for="my-input">Cédula</label>
                    <input id="my-input" value="<%=cliente.cedula%>" class="form-control" type="text" name="cedula">
                </div>
                <div>
                    <label for="my-input">Tipo de Usuario</label>
                    <select class="form-select" aria-label="Default select example">
                        <option value="1"><%=cliente.tipo_usuario%></option>
                    </select>
                </div>
                <button class="btn btn-success" type="submit">Actualizar</button>
                <a class="btn btn-primary" href="/clientes">Cancelar</a>
            </form>
        </p>
    </div>
</div>

<%- include ../layouts/footer.ejs%>